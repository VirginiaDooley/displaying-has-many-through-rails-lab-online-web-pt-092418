<h2>Name: <%= @doctor.name %></h2>
<h3>Department: <%= @doctor.department %></h3>

<% @doctor.appointments.each do |appointment| %>
  <li>Date: <%= appointment.appointment_datetime.strftime('%B %d, %Y') %> at <%= appointment.appointment_datetime.strftime('%T') %>
  <li>Patient: <%= link_to appointment.patient.name, patient_path(appointment.patient) %>
<% end %>
