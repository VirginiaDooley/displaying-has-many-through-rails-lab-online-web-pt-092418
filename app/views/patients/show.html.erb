<h1>Patient Name: <%= @patient.name %></h1>
<h3>Age: <%= @patient.age %></h3>

<% @patient.appointments.each do |appointment| %>
  <li>Date: <%= appointment.appointment_datetime.strftime('%B %d, %Y') %> at <%= appointment.appointment_datetime.strftime('%T') %>
  <li>Doctor: <%= link_to appointment.doctor.name, doctor_path(appointment.doctor) %>
<% end %>
